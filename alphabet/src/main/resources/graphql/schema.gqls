type ExerciseDto {
    id: ID!
    options: [String!]!
}

type ExercisesResponse {
    page: Int!
    size: Int!
    totalSize: Int!
    exercises: [ExerciseDto]!
}

type AnswerResponse {
    correct: Boolean!
    correctAnswer: String!
}

type Query {
    courseExercises(course: Int, page: Int, amount: Int): ExercisesResponse!
}

type Mutation {
    answer(exercise: Int, guess: String): AnswerResponse!
}
